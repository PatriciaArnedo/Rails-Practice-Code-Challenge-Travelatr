<%= form_for @post do |f| %>
<%= f.label "title: " %>
<%= f.text_field :title %>
<br><br>
<%= f.label "content: " %>
<%= f.text_area :content %>
<br><br>
<%= f.label "Blogger:" %><br><br>
<%= f.collection_select(:blogger_id, Blogger.all, :id, :name) %><br><br>
<%= f.label "Destination" %><br><br>
<%= f.collection_select(:destination_id, Destination.all, :id, :name) %><br><br>
<%= f.submit %> 
<br>
<%end %>